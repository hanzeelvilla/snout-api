generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(uuid())  
  name      String
  lastName  String
  email     String      @unique
  username  String      @unique
  password  String  
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  pets      Pet[]
  reminders Reminder[]
}

model Specie {
  id        String    @id @default(uuid())  
  name      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  race      Race[]
}

model Race {
  id        String    @id @default(uuid())  
  name      String    @unique
  specie    Specie    @relation(fields: [specieId], references: [id])
  specieId  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  avatar    Avatar[]
}

model Avatar {
  id        String    @id @default(uuid())  
  color     String
  url       String?  
  race      Race      @relation(fields: [raceId], references: [id])
  raceId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  pets      Pet[]

  @@unique([raceId, color]) 
}

model Pet {
  id        String    @id @default(uuid())  
  name      String
  birthDate DateTime
  avatarId  String
  avatar    Avatar    @relation(fields: [avatarId], references: [id])
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Reminder {
  id          String    @id @default(uuid())
  title       String
  description String
  dueDate     DateTime
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  userId      String
  user        User      @relation(fields: [userId], references: [id])
}