generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())  
  name      String
  lastName  String
  email     String   @unique
  username  String   @unique
  password  String  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  mascotas  Pet[]
}

model Specie {
  id        String    @id @default(uuid())  
  name      String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  raza      Race[]
}

model Race {
  id        String    @id @default(uuid())  
  name      String    @unique
  especie   Specie    @relation(fields: [especieId], references: [id])
  especieId String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  avatar     Avatar[]
}

model Avatar {
  id        String    @id @default(uuid())  
  color     String
  url       String?  
  raza      Race      @relation(fields: [razaId], references: [id])
  razaId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  mascotas  Pet[]

  @@unique([razaId, color]) 
}

model Pet {
  id        String    @id @default(uuid())  
  name      String
  birthDate DateTime
  avatarId  String
  avatar    Avatar    @relation(fields: [avatarId], references: [id])
  user      User      @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}